<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/dynamic_user_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/dynamic_user_name"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/dynamic_user_time"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/dynamic_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/heme_textSize"
        android:letterSpacing="0.05"
        android:ems="1"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/dynamic_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="评论"
        android:background="#FFF1F1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

</LinearLayout>
