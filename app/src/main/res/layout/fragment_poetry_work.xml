<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/works_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/title_textSize"
            android:text="诗名"/>

        <TextView
            android:id="@+id/works_dynasty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朝代"
            android:layout_toLeftOf="@id/works_author"
            android:layout_marginRight="@dimen/split_margin"
            android:textSize="@dimen/heme_textSize"
            android:layout_toStartOf="@id/works_author" />

        <TextView
            android:id="@+id/works_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/heme_textSize"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/works_verse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="诗句"
        android:textSize="@dimen/heme_textSize"/>


</LinearLayout>