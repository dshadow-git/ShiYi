<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lsj.mvp.view.activity.SiteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activityBar_height"
        android:layout_marginRight="@dimen/edge_margin"
        android:layout_marginLeft="@dimen/edge_margin">

        <ImageView
            android:id="@+id/back"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_left"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="#000000"
            android:textSize="22sp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/split_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/splitLine_height"
        android:background="@color/colorSplitLine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:background="@color/colorBackground">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_marginLeft="@dimen/edge_margin"
           android:textSize="18sp"
           android:gravity="center_vertical"
           android:text="账号设置"
           android:layout_marginStart="@dimen/edge_margin" />

        <include layout="@layout/arrow_right_layout"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:background="@color/colorBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/edge_margin"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:text="简繁体切换"
            android:layout_marginStart="@dimen/edge_margin" />

        <include layout="@layout/arrow_right_layout"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:background="@color/colorBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/edge_margin"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:text="字体切换"
            android:layout_marginStart="@dimen/edge_margin" />

        <include layout="@layout/arrow_right_layout"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:background="@color/colorBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/edge_margin"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:text="离线资源下载"
            android:layout_marginStart="@dimen/edge_margin" />

        <include layout="@layout/arrow_right_layout"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:background="@color/colorBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/edge_margin"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:text="清除缓存"
            android:layout_marginStart="@dimen/edge_margin" />

        <include layout="@layout/arrow_right_layout"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:background="@color/colorBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/edge_margin"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:text="意见反馈"
            android:layout_marginStart="@dimen/edge_margin" />

        <include layout="@layout/arrow_right_layout"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:background="@color/colorBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/edge_margin"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:text="当前版本"
            android:layout_marginStart="@dimen/edge_margin" />

        <include layout="@layout/arrow_right_layout"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:background="@color/colorBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/edge_margin"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:text="关于拾遗"
            android:layout_marginStart="@dimen/edge_margin" />

        <include layout="@layout/arrow_right_layout"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/colorBlack">

        <LinearLayout
            android:layout_width="298dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:background="@color/colorBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F52046"
                android:textSize="22sp"
                android:text="退出登录"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
